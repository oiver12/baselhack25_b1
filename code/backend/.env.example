# API Settings
API_TITLE="BaselHack25 Consensus Builder API" # Optional
API_VERSION="1.0.0" #Optional
CORS_ORIGINS='["*"]'  # For production, use: ["http://localhost:3000", "https://yourdomain.com"]

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_CHANNEL_ID=your_channel_id_here  # Optional - if set, only use this channel

# AI/ML Settings
OPENAI_API_KEY=your_openai_api_key_here

# Prompt Configuration
PROMPTS_FILE_PATH=backend/prompts.json  # Optional, defaults to backend/prompts.json

# Message Relevance Thresholds (cosine similarity, 0.0 to 1.0)
HISTORICAL_MESSAGE_THRESHOLD=0.2  #Optional, Threshold for historical messages (before question was asked)
NEW_MESSAGE_THRESHOLD=0.2  #Optional, Threshold for new messages (after question is active)

# Clustering Configuration
CLUSTER_MAX_COUNT=4  #Optional, Maximum number of active clusters
CLUSTER_ASSIGNMENT_THRESHOLD=0.73  #Optional, Nearest-centroid assignment threshold
CLUSTER_PERIODIC_INTERVAL=2.0  #Optional, Periodic clustering interval in seconds

# Application Settings
DASHBOARD_BASE_URL="https://yourapp.com/dashboard"

# API Key for authentication (Create message and Create report)
KEY=your_api_key_here # Optional, Defaults to password 
